@model IEnumerable<MyFuel.Models.FuelType>

@{
    ViewData["Title"] = "Типы топлива";
}

<h1>Типы топлива</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FuelName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FuelName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Fuel_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Fuel_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Fuel_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
